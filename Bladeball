-- Create the ScreenGui and Frame
local screenGui = Instance.new("ScreenGui")
local frame = Instance.new("Frame")
local loadingLabel = Instance.new("TextLabel")
local loadingBarBackground = Instance.new("Frame")
local loadingBar = Instance.new("Frame")
local percentLabel = Instance.new("TextLabel")

-- Set properties for ScreenGui
screenGui.Name = "LoadingScreen"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Set properties for Frame
frame.Name = "LoadingFrame"
frame.Size = UDim2.new(0.5, 0, 0.3, 0)
frame.Position = UDim2.new(0.25, 0, 0.35, 0)
frame.BackgroundColor3 = Color3.fromRGB(200, 200, 200) -- Light gray for a low-poly feel
frame.BorderSizePixel = 0 -- No border
frame.Parent = screenGui

-- Set properties for TextLabel
loadingLabel.Name = "LoadingLabel"
loadingLabel.Size = UDim2.new(1, 0, 0.2, 0)
loadingLabel.Position = UDim2.new(0, 0, 0, 0)
loadingLabel.Text = "Duping Swords\nLoading Hub"
loadingLabel.TextColor3 = Color3.fromRGB(50, 50, 50) -- Darker gray
loadingLabel.TextScaled = true
loadingLabel.TextWrapped = true
loadingLabel.BackgroundTransparency = 1 -- Transparent background
loadingLabel.Parent = frame

-- Set properties for loading bar background
loadingBarBackground.Name = "LoadingBarBackground"
loadingBarBackground.Size = UDim2.new(0.8, 0, 0.1, 0)
loadingBarBackground.Position = UDim2.new(0.1, 0, 0.25, 0)
loadingBarBackground.BackgroundColor3 = Color3.fromRGB(150, 150, 150) -- Slightly darker gray
loadingBarBackground.BorderSizePixel = 0 -- No border
loadingBarBackground.Parent = frame

-- Set properties for loading bar
loadingBar.Name = "LoadingBar"
loadingBar.Size = UDim2.new(0, 0, 1, 0)
loadingBar.BackgroundColor3 = Color3.fromRGB(0, 150, 0) -- Green for progress
loadingBar.BorderSizePixel = 0 -- No border
loadingBar.Parent = loadingBarBackground

-- Set properties for percentage label
percentLabel.Name = "PercentLabel"
percentLabel.Size = UDim2.new(1, 0, 0.2, 0)
percentLabel.Position = UDim2.new(0, 0, 0.4, 0)
percentLabel.Text = "0%"
percentLabel.TextColor3 = Color3.fromRGB(50, 50, 50) -- Darker gray
percentLabel.TextScaled = true
percentLabel.BackgroundTransparency = 1 -- Transparent background
percentLabel.Parent = frame

-- Function to simulate loading
local function simulateLoading()
    local totalTime = 240 -- Total time in seconds (4 minutes)
    local updateInterval = 1 -- Update every second
    local elapsedTime = 0

    while elapsedTime < totalTime do
        wait(updateInterval)
        elapsedTime = elapsedTime + updateInterval
        local percent = math.floor((elapsedTime / totalTime) * 100)

        -- Update loading bar and percentage label
        loadingBar.Size = UDim2.new(percent / 100, 0, 1, 0)
        percentLabel.Text = percent .. "%"

        if elapsedTime >= totalTime then
            break
        end
    end

    wait(1) -- Optional wait before destroying the GUI
    screenGui:Destroy() -- Remove the loading screen after loading
end

simulateLoading()

